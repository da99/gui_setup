#!/usr/bin/env bash
#
#
set -u -e -o pipefail

action=$1
shift

case $action in
  help|--help)
    bash_setup print_help $0
    ;;

  "install")
    sudo pacmatic -S                  \
      unzip faenza-icon-theme         \
      plank plank-extras              \
      ttf-droid noto-fonts            \
      noto-fonts-emoji noto           \
      ttf-dejavu                      \
      ttf-liberation                  \
      bluez bluez-libs bluez-utils    \
      bluez-firmware blueman bluez    \
      vlc libav                       \
      pekwm conky xdbinfo
    ;;

  "wh")
    xdbyinfo | grep dimensions
    ;;

  *)
    echo "Unknown option: $action" 1>&2
    exit 1
    ;;

esac
